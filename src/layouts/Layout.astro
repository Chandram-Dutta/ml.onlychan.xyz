---
import Header from "../components/Header.astro";
import "katex/dist/katex.min.css";
import PostHog from "../components/PostHog.astro";
---

<!doctype html>
<html
    lang="en"
    class="bg-gray-900 text-white prose-code:before:content-none prose-code:after:content-none"
>
    <head>
        <PostHog />
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="My notes on machine learning, deep learning, and AI."
        />
        <title>ml.onlychan.xyz</title>
    </head>
    <body class="p-4">
        <Header />
        <slot />
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
